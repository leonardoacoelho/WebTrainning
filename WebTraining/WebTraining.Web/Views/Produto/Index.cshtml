@model IEnumerable<WebTraining.Web.Models.ProdutoVM>

@{
    ViewBag.Title = "Index";
}

<h2>Produtos</h2>

<hr />

<p>
   <a href="@Url.Action("Adicionar")" class="btn btn-success">Adicionar</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrupoProduto_Id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrupoProduto.Descricao)
        </td>
        <td>
            <a href="@Url.Action("Editar", new { id=item.Id })" class="btn btn-warning">Editar</a>
            <a href="@Url.Action("Detalhar", new { id=item.Id })" class="btn btn-info">Detalhar</a>
            <a href="@Url.Action("Remover", new { id=item.Id })" class="btn btn-danger">Remover</a>
        </td>
    </tr>
}

</table>
