@model WebTraining.Web.Models.ClienteVM

@{
    ViewBag.Title = "Remover";
}

<h2>Cliente</h2>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index")">Clientes</a></li>
    <li>Remover</li>
</ol>

<hr />

<h3 class="alert alert-warning text-center">Você tem certeza que deseja remover este cliente?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-danger" />
        </div>
    }
</div>

<hr />

<div class="alert alert-info text text-right">
    <a href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Voltar para a lista</a>
</div>
