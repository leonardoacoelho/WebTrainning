@model IEnumerable<WebTraining.Web.Models.ClienteVM>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>

<p>
    <a href="@Url.Action("Adicionar")" class="btn btn-success">Adicionar</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <a href="@Url.Action("Detalhar", new { id = item.Id })" class="btn btn-warning">Detalhes</a>
            <a href="@Url.Action("Editar", new { id = item.Id })" class="btn btn-primary">Editar</a>
            <a href="@Url.Action("Remover", new { id = item.Id })" class="btn btn-danger">Remover</a>
        </td>
    </tr>
}

</table>
